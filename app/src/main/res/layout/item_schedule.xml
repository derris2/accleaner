<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Text Layout -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="16dp"> <!-- Add padding -->

            <!-- Start Hour TextView -->
            <TextView
                android:id="@+id/tvScheduleIDName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:paddingTop="8dp"
                android:text="ID - Name"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvScheduleStartHour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:paddingTop="8dp"
                android:text="Start Hour" />

            <!-- Days of the Week TextViews -->
            <TextView
                android:id="@+id/tvScheduleDays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:paddingTop="4dp"
                android:text="Day" />

            <!-- Repeated Interval TextView -->
            <TextView
                android:id="@+id/tvScheduleRepeatedInterval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:paddingTop="4dp"
                android:text="Repeated Interval" />

        </LinearLayout>

        <!-- Switch Button Layout -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <!-- Switch Button -->
            <Switch
                android:id="@+id/switchButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:thumbTint="@color/logo_blue"
                android:trackTint="@color/logo_blue"
                />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
