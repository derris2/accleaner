<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <TableLayout
                    android:id="@+id/tableLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Table Header -->
                    <TableRow
                        android:id="@+id/tableRowHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/componentHeader"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Component"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:padding="8dp"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/subComponentHeader"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sub Component"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:padding="8dp"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/instructionParamHeader"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Instruction Param"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:padding="8dp"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/repeatableHeader"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Repeatable"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:padding="8dp"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/actionHeader"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Action"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:padding="8dp"
                            android:gravity="center"/>

                    </TableRow>

                    <!-- Table Row 1 -->
                    <TableRow
                        android:id="@+id/tableRow1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/component1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Component 1"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:padding="8dp"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/subComponent1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sub Component 1"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:padding="8dp"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/instructionParam1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Instruction Param 1"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:padding="8dp"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/repeatable1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Yes"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:padding="8dp"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/action1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Edit"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:padding="8dp"
                            android:gravity="center"/>

                    </TableRow>

                    <!-- Table Row 2 -->
                    <TableRow
                        android:id="@+id/tableRow2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/component2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Component 2"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:padding="8dp"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/subComponent2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sub Component 2"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:padding="8dp"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/instructionParam2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Instruction Param 2"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:padding="8dp"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/repeatable2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="No"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:padding="8dp"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/action2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Delete"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:padding="8dp"
                            android:gravity="center"/>

                    </TableRow>

                    <!-- Add more rows as needed -->

                </TableLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
